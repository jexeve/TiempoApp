<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TiempoApp.MainPage"
             BackgroundColor="White">

    <StackLayout Margin="0,100,0,0" VerticalOptions="CenterAndExpand">
        <!-- Encabezado -->
        <Label x:Name="LblCiudad" Text="Ciudad"
               FontAttributes="Bold"
               FontSize="25"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               TextColor="Black" />

        <Label x:Name="LblPais" Text="Ciudad"
               FontAttributes="Bold"
               FontSize="20"
               HorizontalOptions="Center"
               VerticalOptions="Center" 
               TextColor="Black" />

        <Label x:Name="LblTemperatura" Text="Temperatura"
               FontSize="60"
               HorizontalOptions="Center"
               VerticalOptions="Center" 
               TextColor="Black" />

        <Image Grid.Row="2"
                x:Name="ImgClimaIcon"
                VerticalOptions="Start"
                HeightRequest="220"
                WidthRequest="220" />
        
        <!-- ... otras etiquetas según sea necesario -->

    </StackLayout>

</ContentPage>
